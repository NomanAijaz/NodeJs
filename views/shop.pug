extends layouts/main-layout.pug 

block styles   
    link(rel="stylesheet", href="/css/product.css")

block content 
    main
        .grid
            if prods.length > 0
                each product in prods 
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="http://smartmobilestudio.com/wp-content/uploads/2012/06/leather-book-preview.png", alt="book image")
                        div.card__content
                            h2.product__price $92.2
                            p.product__description A very interesting book I ever have read 
                        .card__actions  
                            button.btn Add to Cart 
            else
                h1 No Products 
